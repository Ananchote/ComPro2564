#รับค่าตัวแปร
num = int(input("Enter number:"))
#ตัวตัวแปรมาFor
for i in range(num):
  for j in range(num-i-1):
    print(" ", end = "")
  for k in range(2*i+1):
   print("*", end = "")
  print()
for i in range(num-1, 0,-1):
  for j in range(num-i):
    print(" ", end = "")
  for k in range(2*i-1):
   print("*", end = "")
  print()
